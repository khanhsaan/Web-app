<body>
  <form class="row g-3 py-4 px-5" action="/result" method="POST">
    <!-- Task information -->
    <!-- The outermost div as a container -->
    <div id="tasks">
        <!-- The task  -->
        <!-- <div class="task">
            <p class="title">Task 1</p>
